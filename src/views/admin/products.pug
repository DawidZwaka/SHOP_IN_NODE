extends ../layouts/adminLayout.pug
include ../partials/admin/mixins/product
include ../partials/mixins/card
include ../partials/mixins/modal

block content
    |
    .col-10.mx-auto.my-5
        .products--admin__header.mb-3
            h2.display-4.mx-auto #{__('Products')}
        .products--admin__list
            .grid.productList
                each product in prods
                    .grid__col
                        +productCard(product)
                .grid__col
                    +addItemCard("/admin/add-product")
        .products--admin__footer
    +simpleDeleteModal("product")